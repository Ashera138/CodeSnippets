			<Shortcut>pirroprop</Shortcut>
		</Header>
		<Snippet>
			<Declarations>
				<Literal Editable="true">
					<ID>PropertyName</ID>
					<ToolTip>Replace with property name.</ToolTip>
					<Default>Name</Default>
				</Literal>
				<Literal Editable="true">
					<ID>PropertyType</ID>
					<ToolTip>Replace with the property type.</ToolTip>
					<Default>string</Default>
				</Literal>
				<Literal default="true" Editable="false">
					<ID>classname</ID>
					<ToolTip>Class name</ToolTip>
					<Function>ClassName()</Function>
					<Default>ClassNamePlaceholder</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp" Kind="method body">
				<![CDATA[public static readonly PropertyInfo<$PropertyType$> $PropertyName$Property =
	PropertyInfoRegistration.Register<$classname$,$PropertyType$>(_ => _.$PropertyName$);
public $PropertyType$ $PropertyName$
{
	get { return this.ReadProperty($classname$.$PropertyName$Property); }
	private set { this.LoadProperty($classname$.$PropertyName$Property, value); }
}]]>
			</Code>
		</Snippet>
	</CodeSnippet>
